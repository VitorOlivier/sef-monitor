{
  "name": "sef-monitor",
  "version": "1.0.0",
  "description": "Monitor do Portal sef.pt",
  "main": "src/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "sef",
    "monitor"
  ],
  "author": "Vitor Oliveira <vitorollivier@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "node-schedule": "^1.3.2",
    "nodemailer": "^6.3.1",
    "puppeteer": "^1.20.0",
    "puppeteer-extra": "^2.1.3",
    "puppeteer-extra-plugin-anonymize-ua": "^2.1.4",
    "puppeteer-extra-plugin-recaptcha": "^3.0.4",
    "puppeteer-extra-plugin-stealth": "^2.2.2",
    "s": "^0.1.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "prettier": "^1.18.2"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  }
}
